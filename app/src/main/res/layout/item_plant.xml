<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/item"
        android:padding="16dp">

        <!-- Obrazek rośliny -->
        <ImageView
            android:id="@+id/image_plant"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="Plant Image"
            android:scaleType="centerCrop" />

        <!-- Kontener na informacje o roślinie -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <!-- Gatunek rośliny -->
            <TextView
                android:id="@+id/text_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/genre"
                android:textColor="@color/text"
                android:textStyle="bold" />

            <!-- Opis rośliny -->
            <TextView
                android:id="@+id/text_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/plant_description"
                android:textColor="@color/text"/>

            <!-- Pokój -->
            <TextView
                android:id="@+id/text_room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pokój"
                android:textColor="@color/text"/>

            <!-- Częstotliwość podlewania -->
            <TextView
                android:id="@+id/text_watering_interval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Podlewanie co 7 dni"
                android:textColor="@color/text"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
